<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_corner_chat"
        android:padding="5dp"
        android:text="24 September"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/meNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="sent by you"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/sent_bubble"
                android:backgroundTint="@color/colorAccent"
                >

                <ImageView
                    android:id="@+id/chat_status_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/single_tick"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/chat_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email|phone|web"
                    android:maxWidth="250dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="hi hello aslkmsjhaskjdhkajshdjkahsdkjashmas \nasffg"
                    android:textColor="@color/white"
                    android:textColorLink="@color/black"
                    android:textSize="16sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/chat_status_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/warning_icon"
                android:gravity="center"
                android:text="Not paid"
                android:textColor="#E57373"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/youNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="sent by you"
            android:textSize="12sp" />
        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/second_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/user_avatar"/>-->

        <TextView
            android:id="@+id/chat_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email|phone|web"
            android:background="@drawable/received_bubble"
            android:backgroundTint="@color/white"
            android:maxWidth="250dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="hi hello"
            android:textColor="@color/black"
            android:textColorLink="@color/colorAccent"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
